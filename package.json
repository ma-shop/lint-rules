{
  "name": "lint-rules",
  "version": "0.1.4",
  "description": "This contains our Assets Linting Rules",
  "main": "index.js",
  "scripts": {
    "precommit": "lint-staged"
  },
  "repository": "ma-shop/lint-rules",
  "author": "Tyler Benton <tjbenton21@gmail.com> (https://github.com/tjbenton)",
  "contributors": [
    "Mike Sither <michaels@marketamerica.com>",
    "Trevor Brindle <tabrindle@gmail.com> (https://github.com/tabrindle)"
  ],
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "eslint": "4.*",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-fat-arrow-same-line": "~0.1.0",
    "eslint-plugin-import": "^2.8.0",
    "husky": "~0.14.3",
    "lerna": "^2.5.1",
    "lint-staged": "~7.0.0",
    "prettier-eslint-cli": "~4.4.3",
    "stylelint": "7.9.0",
    "stylelint-junit-formatter": "0.2.0",
    "stylelint-order": "~0.3.0",
    "stylelint-scss": "1.4.3"
  },
  "lint-staged": {
    "*.{js,jsx}": ["prettier-eslint --write", "eslint --fix", "git add"],
    "*.scss": [
      "prettier --parser scss --single-quote --write",
      "stylelint --fix",
      "git add"
    ],
    "*.md": ["prettier --parser markdown --single-quote --write", "git add"],
    "*.json": ["prettier --parser json --write", "git add"]
  },
  "eslintConfig": {
    "extends": ["./packages/eslint-config-ma-shop/index.js"],
    "rules": {
      "quote-props": "off"
    }
  },
  "prettier": {
    "listDifferent": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true
  }
}
