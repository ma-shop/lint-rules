{
  "name": "lint-rules",
  "version": "0.1.4",
  "description": "This contains our Assets Linting Rules",
  "main": "index.js",
  "scripts": {
    "precommit": "lint-staged",
    "postinstall": "make lint-json"
  },
  "repository": "ma-shop/lint-rules",
  "author": "Tyler Benton <tjbenton21@gmail.com> (https://github.com/tjbenton)",
  "contributors": ["Mike Sither <michaels@marketamerica.com>"],
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "babel-eslint": "^9.0.0",
    "eslint": "^5.5.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-fat-arrow-same-line":
      "tjbenton/eslint-plugin-fat-arrow-same-line#f43587a",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-native": "^3.2.1",
    "husky": "~0.14.3",
    "lerna": "^3.3.0",
    "lint-staged": "^7.2.2",
    "prettier-eslint-cli": "^4.7.1",
    "stylelint": "7.9.0",
    "stylelint-junit-formatter": "0.2.0",
    "stylelint-order": "~0.3.0",
    "stylelint-scss": "1.4.3"
  },
  "lint-staged": {
    "*.{js,jsx}": ["eslint --fix", "git add"],
    "*.scss": [
      "prettier --parser scss --single-quote --write",
      "stylelint --fix",
      "git add"
    ],
    "*.md": ["prettier --parser markdown --single-quote --write", "git add"],
    "*.json": ["prettier --parser json --write", "git add"]
  },
  "eslintConfig": {
    "extends": ["./packages/eslint-config-ma-shop-react/index.js"],
    "rules": {
      "quote-props": "off",
      "no-console": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false
  },
  "private": true
}
